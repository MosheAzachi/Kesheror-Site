<% extend('base') %>

<div class="block">
    <h1>חנות</h1>
    <div class="catalog">
      <% items.forEach(function(item) { %>
        <div class="item">
          <img src="<%= item.image %>" alt="<%= item.productName %>">
          <h2><%= item.productName %></h2>
          <p><%= item.description %></p>
          <b>מחיר: <%= item.price %> ש"ח בלבד</b>
          <div class="center">
            <% if (locals.user) { %>
              <button class="btn btn-primary btn-block mb-4 itemBtn" onclick="addToCart('<%= locals.user._id %>','<%= item._id %>')">הוסף לסל !</button>
            <% } else { %>
              <button class="btn btn-primary btn-block mb-4 itemBtn" onclick="alert('אנא התחבר על מנת להוסיף מוצרים לסל')">הוסף לסל !</button>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
    <hr>
  </div>